        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nome_list_view_row_bevanda_assemblata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text=""
            android:textSize="10pt">
        </TextView>

        <TextView
            android:id="@+id/costo_list_view_row_bevanda_assemblata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10pt">
        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/ingredienti_list_view_row_bevanda_assemblata"
