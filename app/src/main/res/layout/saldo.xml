<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="642dp"
        android:layout_height="337dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-100dp"
        android:visibility="visible"
        app:srcCompat="@drawable/get_drink_logos_transparent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="144dp"
        android:layout_height="46dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="130dp"
        android:text="SALDO"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/saldoid"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="-130dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:lineHeight="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="237dp"
        android:layout_height="37dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="-150dp"
        android:text="INSERIRE IMPORTO "
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="-210dp"
        android:text="DA RICARICARE"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginStart="-200dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorLink="#FAFAFA"
        android:visibility="visible"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/ricarica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginStart="-160dp"
        android:text="RICARICA"
        android:textCursorDrawable="@color/white"
 />

    <Button
        android:id="@+id/torna_indietro"
        android:layout_width="129dp"
        android:layout_height="65dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="-10dp"
        android:text="Torna indietro"
 />

</LinearLayout>