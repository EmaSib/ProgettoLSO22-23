<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/nome_pagina_bevanda_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/abril_fatface"
        android:text=""
        android:textSize="10pt" />

    <ImageView
        android:id="@+id/foto_pagina_bevanda_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/costo_pagina_bevanda_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="10pt"
        android:fontFamily="@font/abril_fatface" />

    <TextView
        android:id="@+id/ingredienti_pagina_bevanda_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/abril_fatface"
        android:text="INGREDIENTI:"
        android:textSize="10pt" />

    <ListView
        android:id="@+id/lista_ingredienti_pagina_bevanda_list_view"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_weight="1"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/descrizione_pagina_bevanda_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="10pt"
        android:fontFamily="@font/abril_fatface" />

    <Button
        android:id="@+id/torna_indietro_button_pagina_bevanda"
        android:layout_width="376dp"
        android:layout_height="1dp"
        android:layout_marginStart="17dp"
        android:layout_weight="1"
        android:text="TORNA INDIETRO" />

    <Button
        android:id="@+id/aggiungi_carrello_button_pagina_bevanda"
        android:layout_weight="1"
        android:layout_width="376dp"
        android:layout_height="1dp"
        android:layout_marginStart="17dp"
        android:text="AGGIUNGI AL CARRELLO" />

</LinearLayout>
